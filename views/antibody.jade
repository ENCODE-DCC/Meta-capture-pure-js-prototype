extends layout

block content
  div.page-header
    h1= title

  div.row
    div.span12
      h2 ENCODE 3 Antibodies (
        span(data-bind="text: antibodies().length")
        )

      table.table
        thead
          tr
            th Antibody Name
            th Target
            th Organism
        tbody(data-bind="foreach: antibodies")
          tr
            td
              input(data-bind="value: name")
            td
              //- select(data-bind="options: $root.availableTargets, value: target.name, optionsText: 'symbol', optionsValue: target.name")
              input(data-bind="value: target.name")
            td
              //- select(data-bind="options: $root.availableOrgs, value: target.organism, optionsValue: target.organism")
              input(data-bind="value: target.organism")
            td
              a(data-bind="click: $root.removeAntibody") Remove
            td
              a(data-bind="click: $root.viewJSON") View JSON
          

      button(data-bind="click: $root.addAntibody").btn Add a new Antibody
      button(data-bind="click: $root.getAntibodies").btn Get Antibodies
 
block scripts
  script(type='text/javascript', src='/javascripts/antibody/antibody.js')
